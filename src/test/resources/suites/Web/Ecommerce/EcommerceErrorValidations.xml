<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="Error Validations Ecommerce" preserve-order="true">
    <groups>
        <run>
            <include name="ErrorHandling"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="com.thomas.listeners.TestListener"/>
    </listeners>

    <test name="LoginPage Error Validations">
        <classes>
            <class name="com.thomas.web.pages.ecommerce.LoginTest"/>
        </classes>
    </test>

    <test name="ProductCatalogue Page Error Validations">
        <classes>
            <class name="com.thomas.web.pages.ecommerce.ProductCatologueTest"/>
        </classes>
    </test>

</suite>